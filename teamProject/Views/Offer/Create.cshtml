@using teamProject.viewModel
@using System.Collections.Generic
@model OfferServiceProviderViewModel

<h2>Create Offer</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Duration</label>
        <input asp-for="OfferDuration" class="form-control" />
    </div>
    <div class="form-group"> 
         <label asp-for="ServiceProviderId">ServiceProvider</label> 
       <select asp-for="ServiceProviderId" asp-items="Model.ServiceProviders"  
        class="form-control"></select> 
        <span asp-validation-for="ServiceProviderId" class="text-danger"></span> 
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
