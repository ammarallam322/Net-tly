@using teamProject.viewModel
@using System.Collections.Generic
@model OfferServiceProviderViewModel





<div class="myMainOwnContaier">
    <div class="container myOwnContaier rounded p-5">
        <div class="row">
            <table class="table table-hover">
                <div asp-validation-summary="All" class="text-danger"></div>

                <thead class="headerLabel">
                    <tr class="p-3 border-bottom text-center">
                        <th colspan="2">Create Offer</th>
                    </tr>
                </thead>

                <tbody>
                    <form asp-action="Create" method="post">
                    <tr class="p-3 border-top border-bottom">
                        <td><label class="control-label inputLabel">Name</label></td>
                        <td>
                            <input asp-for="Name" class="form-control" />
                        </td>
                    </tr>
                    <tr class="p-3 border-top border-bottom">
                        <td><label class="control-label inputLabel">Duration</label></td>
                        <td>
                            <input asp-for="OfferDuration" class="form-control" />
                        </td>
                    </tr>
                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="ServiceProviderId" class="control-label inputLabel">Service Provider</label></td>
                        <td>
                            <select asp-for="ServiceProviderId" asp-items="Model.ServiceProviders" class="form-control"></select>
                            <span asp-validation-for="ServiceProviderId" class="text-danger"></span>
                        </td>
                    </tr>

                <tfoot>
                    <tr class="p-3 border-top">
                        <td><a asp-action="Index"><i class="bi bi-skip-backward-fill"></i></a></td>
                        <td><button type="submit" class="btn btn-primary createButton">Save</button></td>
                    </tr>
                </tfoot>
                </form>
                </tbody>
            </table>

        </div>
    </div>
</div>