@model teamProject.Models.package

@{
    ViewData["Title"] = "Edit";
}

<div class="myMainOwnContaier">
    <div class="container myOwnContaier rounded p-5">
        <div class="row">
            <table class="table table-hover">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post" asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                <thead class="headerLabel">
                    <tr class="p-3 border-bottom text-center">
                        <th colspan="2" class="fs-1">Edit Package</th>
                    </tr>
                </thead>

                <tbody>
                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="Name" class="control-label inputLabel"></label></td>
                        <td>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="Type" class="control-label inputLabel"></label></td>
                        <td>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="Notes" class="control-label inputLabel"></label></td>
                        <td>
                            <input asp-for="Notes" class="form-control" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="Active" class="control-label inputLabel"></label></td>
                        <td>
                            <input type="checkbox" asp-for="Active" class="form-check-input" />
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="p-3 border-top border-bottom">
                        <td><label asp-for="Price" class="control-label inputLabel"></label></td>
                        <td>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>

                <tfoot>
                    <tr class="p-3 border-top">
                        <td><a asp-action="Index"><i class="bi bi-skip-backward-fill"></i></a></td>
                        <td><input type="submit" value="Save" class="btn btn-primary createButton" /></td>
                    </tr>
                </tfoot>
                </form>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
