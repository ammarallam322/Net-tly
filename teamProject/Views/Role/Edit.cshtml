@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit Role";
}

<div class="myMainOwnContaier">
    <div class="container myOwnContaier rounded p-5">
        <div class="row flex-nowrap justify-content-between branchHeader">
            <h2 class="fs-1 col-sm-6">Edit Role</h2>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <div class="row">
            <form asp-action="Edit" method="post" class="w-100">
                <input type="hidden" name="id" value="@Model.Id" />
                <table class="table table-hover">
                    <thead class="headerLabel">
                        <tr class="p-3 border-bottom text-center">
                            <th colspan="2" class="fs-3">Edit Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="p-3 border-top border-bottom">
                            <td><label class="control-label inputLabel">Role Name</label></td>
                            <td>
                                <input type="text" name="roleName" value="@Model.Name" class="form-control" required />
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr class="p-3 border-top">
                            <td><a asp-action="Index"><i class="bi bi-skip-backward-fill"></i></a></td>
                            <td><input type="submit" value="Save" class="btn btn-primary createButton" /></td>
                        </tr>
                    </tfoot>
                </table>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
