@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<form id="deleteForm">
    @Html.AntiForgeryToken()
</form>

<div class="myMainOwnContaier">
    <div class="container myOwnContaier rounded p-5">
        <div class="row flex-nowrap justify-content-between branchHeader">
            <h2 class="fs-1 col-sm-6">Roles</h2>
        </div>

        <div class="row">
            <a asp-action="Add" class="my-3 btn custom-btn btn-3"><span>+ Add Role</span></a>
        </div>

        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr class="p-3 border-top border-bottom">
                        <th>Role Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="roles-body">
                    @foreach (var role in Model)
                    {
                        <tr class="p-3 border-top border-bottom">
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                 <button asp-controller="Role" class="btn btn-danger mx-2" onclick="confirmDelete('@role?.Id', '/Role/DeleteConfirmed')" title="Delete"> 
                                    <i class="fas fa-trash"></i> 
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
