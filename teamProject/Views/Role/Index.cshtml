@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="myMainOwnContaier">
    <div class="container myOwnContaier rounded p-5">
        <div class="row flex-nowrap justify-content-between branchHeader">
            <h2 class="fs-1 col-sm-6">Roles</h2>
        </div>

        <div class="row">
            <a asp-action="Add" class="my-3 btn custom-btn btn-3"><span>+ Add Role</span></a>
        </div>

        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr class="p-3 border-top border-bottom">
                        <th>Role Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="roles-body">
                    @foreach (var role in Model)
                    {
                        <tr class="p-3 border-top border-bottom">
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline delete-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger mx-2" onclick="return confirmDelete(event, '@role.Id')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(event, roleId) {
            event.preventDefault(); // منع الإرسال التلقائي

            if (confirm("Are you sure you want to delete this role?")) {
                let form = event.target.closest("form"); // جلب الفورم القريب من الزر
                $.ajax({
                    url: form.action,
                    type: "POST",
                    data: $(form).serialize(), // إرسال البيانات مع التوكن المضاد للتزوير
                    success: function () {
                        alert("Role deleted successfully.");
                        location.reload();
                    },
                    error: function () {
                        alert("Error deleting role.");
                    }
                });
            }
        }
    </script>
}
