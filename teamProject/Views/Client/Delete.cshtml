@model teamProject.viewModel.ClientViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="lead text-danger">Are you sure you want to delete this record?</p>
            <hr />
            <dl class="row mb-4">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">SSN</dt>
                <dd class="col-sm-9">@Model.SSN</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <form asp-action="DeleteConfirmed" asp-route-Id="@Model.Id" method="post">
                    <button type="submit" asp-action="DeleteConfirmed" asp-route-Id="@Model.Id" class="btn btn-outline-danger">Delete</button>
                </form>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>
