@model teamProject.viewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LogRegsLayout";
}

<section class="vh-100 gradient-custom">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mt-mb-5 pb-pt-5">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <form asp-action="Login">
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <div data-mdb-input-init class="form-outline form-white mb-4">
                    <label asp-for="Email" for="typeEmailX" class="form-label "></label>
                    <input asp-for="Email" id="typeEmailX" class="form-control form-control-lg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>

                  <div data-mdb-input-init class="form-outline form-white mb-4">
                    <label asp-for="Password" for="typePasswordX" class="form-label mr-auto"></label>
                    <input asp-for="Password" id="typePasswordX" class="form-control form-control-lg" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>

                   <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                   </div>
                   <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5 my-5" type="submit">Login</button>
               </form>

            <div>
              <p class="mb-0">Don't have an account? <a asp-action="Register"  class="text-white-50 fw-bold">Sign Up</a></p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

